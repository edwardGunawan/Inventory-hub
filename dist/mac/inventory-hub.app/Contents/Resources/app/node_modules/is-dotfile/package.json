{
  "author": {
    "name": "Jon Schlinkert",
    "url": "https://github.com/jonschlinkert"
  },
  "description": "Return true if a file path is (or has) a dotfile. Returns false if the path is a dot directory.",
  "devDependencies": {
    "benchmarked": "^0.1.3",
    "dotfile-regex": "^0.1.2",
    "gulp-format-md": "^0.1.12",
    "mocha": "*"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/jonschlinkert/is-dotfile",
  "license": "MIT",
  "main": "index.js",
  "name": "is-dotfile",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonschlinkert/is-dotfile.git"
  },
  "verb": {
    "related": {
      "list": [
        "dotdir-regex",
        "dotfile-regex",
        "is-dotdir",
        "is-glob"
      ]
    },
    "toc": false,
    "layout": "default",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "lint": {
      "reflinks": true
    }
  },
  "version": "1.0.3"
}